  <bind service="Chimera.Interfaces.Overlay.ITriggerFactory, OverlayLib" to="Chimera.Overlay.Triggers.HoverTriggerFactory, OverlayLib"  scope="singleton" />
  <bind service="Chimera.Interfaces.Overlay.ITriggerFactory, OverlayLib" to="Chimera.Overlay.Triggers.ImageHoverTriggerFactory, OverlayLib"  scope="singleton" />
  <bind service="Chimera.Interfaces.Overlay.ITriggerFactory, OverlayLib" to="Chimera.Overlay.Triggers.TextHoverTriggerFactory, OverlayLib"  scope="singleton" />
  <bind service="Chimera.Interfaces.Overlay.ITriggerFactory, OverlayLib" to="Chimera.Overlay.Triggers.ClickTriggerFactory, OverlayLib"  scope="singleton" />
  <bind service="Chimera.Interfaces.Overlay.ITriggerFactory, OverlayLib" to="Chimera.Overlay.Triggers.ImageClickTriggerFactory, OverlayLib"  scope="singleton" />
  <bind service="Chimera.Interfaces.Overlay.ITriggerFactory, OverlayLib" to="Chimera.Overlay.Triggers.TextClickTriggerFactory, OverlayLib"  scope="singleton" />
  <bind service="Chimera.Interfaces.Overlay.ITriggerFactory, OverlayLib" to="Chimera.Overlay.Triggers.ActiveAreaTriggerFactory, OverlayLib"  scope="singleton" />
