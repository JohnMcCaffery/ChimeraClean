<module name="ChimeraConfig">
  <!-- BINDINGS THAT DO NOT REQUIRE ANY EXTERNAL LIBRARIES -->

  <!--                        PLUGIN BINDINGS                         -->
  <bind service="Chimera.ISystemPlugin, ChimeraLib" to="Chimera.Plugins.KBMousePlugin, ChimeraLib" scope="singleton" />
  <bind service="Chimera.ISystemPlugin, ChimeraLib" to="Chimera.OpenSim.OpenSimController, OpenSimLib" scope="singleton" />
  <bind service="Chimera.ISystemPlugin, ChimeraLib" to="Chimera.Flythrough.FlythroughPlugin, FlythroughLib" scope="singleton" />
  <bind service="Chimera.ISystemPlugin, ChimeraLib" to="Chimera.Overlay.OverlayPlugin, OverlayLib" scope="singleton" />
  <!-- Requires overlay to be bound -->
  <bind service="Chimera.ISystemPlugin, ChimeraLib" to="Chimera.Overlay.Plugins.MousePlugin, OverlayLib" scope="singleton" />
  <!--
  <bind service="Chimera.ISystemPlugin, ChimeraLib" to="Touchscreen.TouchscreenPlugin, TouchscreenLib" scope="singleton" />
  <bind service="Chimera.ISystemPlugin, ChimeraLib" to="Chimera.Plugins.ProjectorPlugin, ChimeraLib" scope="singleton" />
  -->

  <!--                        OVERLAY BINDINGS                         -->

  <!-- Transitions -->
  <bind service="Chimera.Interfaces.Overlay.IImageTransitionFactory, OverlayLib" to="Chimera.Overlay.Transitions.BitmapFadeFactory, OverlayLib" />
  <!-- Triggers -->
  <bind service="Chimera.Interfaces.Overlay.ITriggerFactory, OverlayLib" to="Chimera.Overlay.Triggers.HoverTriggerFactory, OverlayLib" />
  <bind service="Chimera.Interfaces.Overlay.ITriggerFactory, OverlayLib" to="Chimera.Overlay.Triggers.ImageHoverTriggerFactory, OverlayLib" />
  <bind service="Chimera.Interfaces.Overlay.ITriggerFactory, OverlayLib" to="Chimera.Overlay.Triggers.TextHoverTriggerFactory, OverlayLib" />
  <bind service="Chimera.Interfaces.Overlay.ITriggerFactory, OverlayLib" to="Chimera.Overlay.Triggers.ClickTriggerFactory, OverlayLib" />
  <bind service="Chimera.Interfaces.Overlay.ITriggerFactory, OverlayLib" to="Chimera.Overlay.Triggers.ImageClickTriggerFactory, OverlayLib" />
  <bind service="Chimera.Interfaces.Overlay.ITriggerFactory, OverlayLib" to="Chimera.Overlay.Triggers.TextClickTriggerFactory, OverlayLib" />
  <!-- Selection Renderers -->
  <!--<bind service="Chimera.Interfaces.Overlay.ISelectionRendererFactory, OverlayLib" to="Chimera.Overlay.Triggers.TextClickTriggerFactory, OverlayLib" />-->
  <!-- Transition Styles -->
  <bind service="Chimera.Interfaces.Overlay.ITransitionStyleFactory, OverlayLib" to="Chimera.Overlay.Transitions.BitmapTransitionFactory, OverlayLib" />
  <bind service="Chimera.Interfaces.Overlay.ITransitionStyleFactory, OverlayLib" to="Chimera.Overlay.Transitions.OpacityTransitionFactory, OverlayLib" />
  <!-- States -->
  <bind service="Chimera.Interfaces.Overlay.IStateFactory, OverlayLib" to="Chimera.Overlay.States.ImageBGStateFactory, OverlayLib" />
  <bind service="Chimera.Interfaces.Overlay.IStateFactory, OverlayLib" to="Chimera.Overlay.States.VideoStateFactory, OverlayLib" />
  <bind service="Chimera.Interfaces.Overlay.IStateFactory, OverlayLib" to="Chimera.Overlay.States.SlideshowStateFactory, OverlayLib" />
  <bind service="Chimera.Interfaces.Overlay.IStateFactory, OverlayLib" to="Chimera.Flythrough.Overlay.FlythroughStateFactory, FlythroughLib" />


  <!--                        LIBRARY SPECIFIC BINDINGS                         -->

  <!-- GridProxy related bindings -->
  <bind service="Chimera.Interfaces.IOutputFactory, ChimeraLib" to="Chimera.OpenSim.OpenSimViewerFactory, OpenSimLib" scope="singleton" />
  <bind service="Chimera.ISystemPlugin, ChimeraLib" to="Chimera.OpenSim.HeightmapPlugin, OpenSimLib" scope="singleton" />

  <!-- Windows Media Player related bindings -->
  <bind service="Chimera.Interfaces.IMediaPlayer, ChimeraLib" to="Chimera.Multimedia.WMPMediaPlayer, WindowsMediaPlayerLib" />

  <!-- Kinect related bindings -->
  <bind service="Chimera.Interfaces.Overlay.ITriggerFactory, OverlayLib" to="Chimera.Kinect.Overlay.SkeletonLostFactory, KinectLib" />
  <bind service="Chimera.Interfaces.Overlay.ITriggerFactory, OverlayLib" to="Chimera.Kinect.Overlay.SkeletonFoundFactory, KinectLib" />
  <bind service="Chimera.ISystemPlugin, ChimeraLib" to="Chimera.Kinect.GUI.KinectCamera, KinectLib" scope="singleton" />
  <bind service="Chimera.ISystemPlugin, ChimeraLib" to="Chimera.Kinect.KinectMovementPlugin, KinectLib" scope="singleton" />
  <bind service="Chimera.ISystemPlugin, ChimeraLib" to="Chimera.Kinect.SimpleKinectCursor, KinectLib" scope="singleton" />
  <bind service="Chimera.ISystemPlugin, ChimeraLib" to="Chimera.Kinect.RaiseArmHelpTrigger, KinectLib" scope="singleton" />

  <!-- Joystick related bindings -->
  <bind service="Chimera.ISystemPlugin, ChimeraLib" to="Joystick.XBoxControllerPlugin, JoystickLib" scope="singleton" />
</module>