<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="General" type="System.Configuration.NameValueSectionHandler"/>
    <section name="Config" type="System.Configuration.NameValueSectionHandler"/>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <General>
    <!--<add key="LoginURI" value="http://apollo.cs.st-andrews.ac.uk:8002"/>-->
    <add key="LoginURI" value="http://localhost:9000"/>
    
    -<add key="ViewerExe"        value="../../Armadillo-Phoenix/Armadillo/Bin/firestorm-bin.exe" />
    <!--<add key="ViewerExe"        value="../../Armadillo-Phoenix/Bin/firestorm-bin.exe" />-->
    <add key="ViewerArguments"  value='--channel "Firestorm-Release" --settings settings_firestorm_release_v4.xml --set InstallLanguage en' />
    <add key="ViewerToggleHUDKey"  value="^%{F1}" />

    <add key="AutoRestart" value="false" />
    <add key="DumpLogs" value="true" />
    <add key="DumpFolder" value="Logs/" />
  </General>

  <Config>
    <!--<add key="ConfigFolder" value="../Config" />-->
    <add key="ConfigFolder" value="Config" />
    <add key="Overlay" value="Overlay.ini" />
  </Config>
 
  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%logger] %-5p %m%n"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG"/>
        <levelMax value="FATAL"/>
        <AcceptOnMatch value="TRUE"/>
      </filter>
      <filter type="log4net.Filter.DenyAllFilter"/>
    </appender>

    <appender name="ProxyTestGUILog" type="log4net.Appender.RollingFileAppender">
      <file value="ProxyTestGUILog.txt"/>
      <appendToFile value="true"/>
      <rollingStyle value="Date"/>
      <datePattern value="yyyyMMdd"/>
      <maxSizeRollBackups value="10"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline"/>
      </layout>
    </appender>

    <appender name="FireEventAppender" type="WinGridProxy.FireEventAppender, ChimeraLib">
      <!--    	
      <filter type="log4net.Filter.LoggerMatchFilter">
        <LoggerToMatch value="OpenMetaverse" />
        <AcceptOnMatch value="true" />
      </filter>
      -->
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="INFO"/>
        <levelMax value="FATAL"/>
        <AcceptOnMatch value="TRUE"/>
      </filter>
      <filter type="log4net.Filter.DenyAllFilter"/>
    </appender>

    <root>
      <level value="ALL"/>
      <!-- <appender-ref ref="LogFileAppender" /> -->
      <appender-ref ref="ConsoleAppender"/>
      <appender-ref ref="FireEventAppender"/>
    </root>

    <logger name="Flythrough">
      <level value="INFO" />
    </logger>

    <logger name="OpenSim">
      <level value="DEBUG" />
    </logger>

    <logger name="OpenMetaverse">
      <level value="INFO" />
    </logger>

    <!--
    *   ALL (Low)
    * DEBUG
    * INFO
    * WARN
    * ERROR
    * FATAL
    * OFF (High)
    -->
  </log4net>

</configuration>