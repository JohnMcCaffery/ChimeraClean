<Overlay Width="1920" Height="1080" >
  <Any>
    <Triggers>
      <Trigger Type="SkeletonLost" Timeout="30000" Name="SkeletonLost" />
    </Triggers>

    <TransitionStyles>
      <Transition Type="BitmapTransition" Name="BitmapFade" Length="2000" Style="Fade" />
      <Transition Type="OpacityTransition" Name="FadeOut" Length="2000" FadeOut="true" />
      <Transition Type="OpacityTransition" Name="FadeIn" Length="2000" FadeOut="false" />
    </TransitionStyles>

    <States>
      <State Type="ImageBG" Name="Splash" Splash="true">
        <window Window="MainWindow" File="../Images/Example/ExampleBG.png" Splash="True"/>
      </State>

      <State Type="Flythrough" Name="Idle" File="../Flythroughs/Cathedral5.xml" Idle="true">
        <IdleTrigger Type="SkeletonLost" />
        <IdleTransition Transition="FadeOut" />
        <SplashTransition Transition="FadeIn" />
      </State>

      <State Type="Slideshow" Name="Slideshow" Folder="C:\Users\Iain\Pictures\Helmsdale Demo - 18-2-2013" >
        <NextTriggers>
          <TextTrigger X="1600" Y="950" Size="50" Colour="Red" Style="Bold">Next</TextTrigger>
        </NextTriggers>
        <PrevTriggers>
          <TextTrigger X="100" Y="950" Size="50" Colour="Red" Style="Bold">Prev</TextTrigger>
        </PrevTriggers>
      </State>

      <State Type="Video" Name="Video" File="E:\Video\Edit\Out\vid.mpg" FinishState="None" L="310" T="310" R="790" B="590" RestartMode="true">
        <window Window="MainWindow" File="../Images/Example/ExampleBGVideo.png" Splash="True"/>
        <StartTriggers>
          <InvisibleTrigger T="310" L="310" R="790" B="590" />
        </StartTriggers>
        <StopTriggers>
          <InvisibleTrigger T="30" L="30" R="800" B="600" />
        </StopTriggers>
        <ResetTriggers>
          <ImageTrigger X="1000" Y="300" File="../Images/Example/Button.png" AlwaysOn="false" />
        </ResetTriggers>
      </State>

      <State Type="Flythrough" Name="FullFlythrough" File="../Flythroughs/Cathedral5.xml" Stepping="true" DisplaySubtitles="true" SubtitleTimeout="20">

        <StepTextSetup Window="MainWindow" Font="Verdana" Size="50" Color="Red" Style="Bold" Colour="Red" X="200" Y="200" />
        <SubtitleTextSetup Window="MainWindow" Font="Verdana" Size="30" Color="Red" Style="Bold" Colour="Red" X="200" Y="800" Alignment="TopMiddle" />

        <Triggers>
          <TextTrigger X="1500" Y="900" Style="Bold" Size="35">Next</TextTrigger>
        </Triggers>

        <Steps>
          <!--<Step Step="0" Voiceover="E:\Video\Edit\Out\vid.mpg">-->
          <Step Step="0" Voiceover="C:\Users\Iain\Music\An Awesome Wave (converted)\01 Intro.m4a">
            <Image File="../Images/Example/SlideshowImg1.png" X="700" Y="50"/>
            <Subtitles>
              <Subtitle>First Subtitle</Subtitle>
              <Subtitle Time="5">Second Subtitle</Subtitle>
            </Subtitles>
          </Step>
          <Step Step="2">
            <Image File="../Images/Example/SlideshowImg3.png" X="600" Y="100"/>
          </Step>
          <Step Step="3" Voiceover="C:\Users\Iain\Music\An Awesome Wave (converted)\10 Fitzpleasure.m4a">
          </Step>
        </Steps>
      </State>
    </States>
    <Transitions>
      <InvisibleTransition From="Splash" To="Slideshow" Transition="FadeOut" T="300" L="300" R="800" B="600" />
      <TextTransition From="Splash" To="Video" Transition="BitmapFade" X="1400" Y="300" Size="50" Style="Bold">Video</TextTransition>
      <ImageTransition From="Splash" To="FullFlythrough" Transition="FadeOut" X="1000" Y="300" File="../Images/Example/Button.png" />
      <TextTransition From="Video" To="Splash" Transition="BitmapFade" X="1400" Y="300" Size="50" Style="Bold">Back</TextTransition>
      <TextTransition From="FullFlythrough" To="Splash" Transition="FadeIn" X="850" Y="950" Size="50" Style="Bold">Main Menu</TextTransition>
    </Transitions>
  </Any>

  <!-- Settings specific to the overlay being instantiated based on click interactions -->

  <ClickBased>
    <States>

    </States>
    <Transitions>

    </Transitions>
  </ClickBased>

  <!-- Settings specific to the overlay being instantiated based on hover interactions -->

  <HoverBased>
    <States>

    </States>
    <Transitions>

    </Transitions>
  </HoverBased>
</Overlay>
